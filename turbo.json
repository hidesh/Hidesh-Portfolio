{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY",
    "SUPABASE_SERVICE_ROLE_KEY",
    "NEXT_PUBLIC_CLARITY_ID",
    "NEXT_PUBLIC_CLARITY_PROJECT_ID",
    "CLARITY_API_TOKEN",
    "CONTACT_EMAIL",
    "RESEND_API_KEY",
    "NEXT_PUBLIC_API_URL",
    "NEXT_PUBLIC_VERCEL_ANALYTICS_ID",
    "BLOB_READ_WRITE_TOKEN",
    "ALTCHA_HMAC_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "SUPABASE_SERVICE_ROLE_KEY",
        "NEXT_PUBLIC_CLARITY_ID",
        "NEXT_PUBLIC_CLARITY_PROJECT_ID",
        "CLARITY_API_TOKEN",
        "CONTACT_EMAIL",
        "RESEND_API_KEY",
        "BLOB_READ_WRITE_TOKEN",
        "ALTCHA_HMAC_KEY"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "clean": {
      "cache": false
    }
  }
}